{
  "name": "prisma-neighborhood",
  "version": "0.1.0",
  "description": "CLI tool that generates ERD diagrams from Prisma schemas with configurable depth traversal",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "prisma-neighborhood": "./dist/cli.js",
    "prisma-hood": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc --emitDeclarationOnly && bun build src/cli.ts --outfile dist/cli.js --target node && bun build src/index.ts --outfile dist/index.js --target node",
    "dev": "bun run src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "bunx @biomejs/biome check src/",
    "prepack": "npm run build"
  },
  "dependencies": {
    "@prisma/internals": "^6.0.0",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.0.0",
    "@types/bun": "latest",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "prisma",
    "erd",
    "diagram",
    "mermaid",
    "cli",
    "neighborhood",
    "subgraph"
  ],
  "author": "",
  "repository": {
    "type": "git",
    "url": ""
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
